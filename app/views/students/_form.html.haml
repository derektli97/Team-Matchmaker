= form_for @student do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :ethnicity
    = f.text_field :ethnicity
  .field
    = f.label :topics
    = f.text_field :topics
  .field
    = f.label :hardware
    = f.check_box :hardware
  .field
    = f.label :electives
    = f.text_field :electives
  .field
    = f.label :preferences
    = f.text_field :preferences
  .field
    = f.label :section
    = f.text_field :section
  .field
    = f.label :project
    = f.text_field :project
  .actions
    = f.submit 'Save'
